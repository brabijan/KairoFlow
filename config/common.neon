parameters:
    # Default values (can be overridden by environment variables via parameters.php)
    database:
        host: postgres
        dbname: kairoflow
        user: kairoflow
        password: kairoflow_secure_password
        port: 5432
    
    redis:
        host: redis
        port: 6379
        password: ''

application:
    errorPresenter: Error
    mapping:
        *: App\Module\*\*Presenter
        Api: App\Module\Api\*Presenter
        Front: App\Module\Front\*Presenter
        Admin: App\Module\Admin\*Presenter

session:
    expiration: 14 days
    savePath: '%tempDir%/sessions'

http:
    headers:
        X-Frame-Options: SAMEORIGIN
        X-Content-Type-Options: nosniff
        X-XSS-Protection: '1; mode=block'

di:
    export:
        parameters: false
        tags: false

routing:
    routes:
        '/health': 'Api:Health:default'
        '/api/v1/<presenter>/<action>[/<id>]': 'Api:<presenter>:<action>'
        '/<presenter>/<action>[/<id>]': 'Front:<presenter>:<action>'